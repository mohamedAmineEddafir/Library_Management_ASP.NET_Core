@model IEnumerable<Demande>
@{
    ViewData["Title"] = "Liste des demandes";
}
<div class="container-fluid px-4">
    <h1 class="mt-4">Tables Demandes</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="index.html">Dashboard</a></li>
        <li class="breadcrumb-item active">Tables</li>
    </ol>
    <div class="card mb-4">
    </div>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            DataTable
        </div>
        <div class="card-body">
            <table id="datatablesSimple">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Prenom</th>
                        <th>Livre</th>
                        <th>Date reservation</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Nom</th>
                        <th>Prenom</th>
                        <th>Livre</th>
                        <th>Date reservation</th>
                        <th>Action</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var Demande in Model)
                    {
                        <tr>
                            <td>@Demande.Name</td>
                            <td>@Demande.Prenome</td>
                            <td>@Demande.Liver</td>
                            <td>@Demande.ReservationDate.ToString("MM/dd/yyyy")</td>
                            <td>
                                <a asp-controller="Home" asp-action="delete_Demande" asp-route-Id="@Demande.Id" onclick="return confirm('The Demande Has been Deleted')"><i class="fas fa-trash ms-3" style="color: red; font-size: 21px;"></i></a>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

